<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentResultatPM">


    <Button
        android:id="@+id/prochain_joueur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="34dp"
        android:text="Joueur suivant "
        android:textColor="@color/black"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/resultatpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/firstcarte"
        android:layout_width="168dp"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="217dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="21dp"/>

    <TextView
        android:id="@+id/secondcarte"
        android:layout_width="156dp"
        android:layout_height="215dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="213dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="21dp"/>

    <Button
        android:id="@+id/prochainTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="77dp"
        android:text="Prochain tour !" />

    <TextView
        android:id="@+id/nommjoueur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20dp"/>
</RelativeLayout>